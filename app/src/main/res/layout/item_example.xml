<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        tools:src="@color/black"/>

    <TextView
        android:id="@+id/tv_name"
        android:background="@color/color_text_selector"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Blue Plate Pub"/>
    <TextView
        android:id="@+id/tv_type"
        android:background="@color/color_text_selector"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@android:color/darker_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        tools:text="European"/>

    <TextView
        android:id="@+id/tv_phone"
        android:background="@color/color_text_selector"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_type"
        app:layout_constraintStart_toStartOf="@id/tv_type"
        app:layout_constraintEnd_toEndOf="@id/tv_type"
        tools:text="1-412-935-0241"/>

    <TextView
        android:background="@color/color_text_selector"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        app:layout_constraintStart_toStartOf="@id/tv_phone"
        app:layout_constraintEnd_toEndOf="@id/tv_phone"
        tools:text="719 Janessa Roads, Port Dannfurt, ND 02083"/>

</androidx.constraintlayout.widget.ConstraintLayout>